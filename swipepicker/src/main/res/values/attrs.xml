<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="swipePicker" format="reference" />

    <declare-styleable name="SwipePicker">
        <attr name="android:minWidth" />
        <attr name="android:hint" />
        <attr name="android:state_activated" />
        <attr name="allowDeactivate" format="boolean" />
        <attr name="allowFling" format="boolean" />
        <attr name="hintTextAppearance" format="reference" />
        <attr name="inputTextAppearance" format="reference" />
        <attr name="backgroundInput" format="color|reference" />
        <attr name="backgroundInputTint" format="color" />
        <attr name="backgroundInputTintMode">
            <enum name="src_over" value="3" />
            <enum name="src_in" value="5" />
            <enum name="src_atop" value="9" />
            <enum name="multiply" value="14" />
            <enum name="screen" value="15" />
            <enum name="add" value="16" />
        </attr>
        <attr name="manualInput" format="boolean" />
        <attr name="android:maxLength" />
        <attr name="android:inputType" />
        <attr name="anchor" format="float" />
        <attr name="scale" format="reference" />
        <attr name="minValue" format="float" />
        <attr name="maxValue" format="float" />
        <attr name="step" format="float" />
        <attr name="value" format="float" />
        <attr name="sticky" format="boolean" />
        <attr name="looped" format="boolean" />
        <attr name="hoverViewStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="HoverView">
        <attr name="android:minWidth" />
        <attr name="android:padding" />
        <attr name="android:textSize" />
        <attr name="android:textColor" />
        <attr name="android:color" />
        <attr name="colorTint" />
    </declare-styleable>
</resources>
